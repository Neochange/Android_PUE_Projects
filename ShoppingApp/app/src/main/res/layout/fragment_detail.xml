    <Button
        android:text="Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_button"
        android:layout_alignBaseline="@+id/web_button"
        android:layout_alignBottom="@+id/web_button"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignEnd="@+id/ratingBar" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_tienda"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/call_button"
        android:layout_toStartOf="@+id/call_button" />

    <!--
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/servicio_tienda"
        android:layout_below="@+id/precio_tienda"
        android:layout_alignLeft="@+id/nombre_tienda"
        android:layout_alignStart="@+id/nombre_tienda" />
    -->

    <com.example.hola.shoppingapp.views.Valorationbar
        android:id="@+id/servicio_tienda"
        custom:color2="@android:color/holo_blue_bright"
        custom:color4="@android:color/holo_blue_dark"
        custom:color6="@android:color/holo_orange_light"
        custom:color8="@android:color/holo_green_light"
        custom:color10="@android:color/holo_green_dark"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_tienda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <com.example.hola.shoppingapp.views.Valorationbar
        android:id="@+id/precio_tienda"
        custom:color2="@android:color/holo_blue_bright"
        custom:color4="@android:color/holo_blue_dark"
        custom:color6="@android:color/holo_orange_light"
        custom:color8="@android:color/holo_green_light"
        custom:color10="@android:color/holo_green_dark"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/servicio_tienda"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/precio_tienda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <Button
        android:text="Web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_button"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_toRightOf="@+id/edit_button"
        android:layout_toEndOf="@+id/edit_button"
        android:layout_marginTop="78dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_button"
        android:layout_alignLeft="@+id/web_button"
        android:layout_alignStart="@+id/web_button"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/location_info"
        tools:text="Estoy en la tienda" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/location_button"
        android:layout_below="@+id/location_info"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
