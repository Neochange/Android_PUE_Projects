<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hola.shoppingapp.DetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precio_tienda"
        android:layout_below="@+id/nombre_tienda"
        android:layout_toRightOf="@+id/nombre_tienda"
        android:layout_toEndOf="@+id/nombre_tienda"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_tienda"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/precio_tienda"
        android:layout_toLeftOf="@+id/precio_tienda"
        android:layout_toStartOf="@+id/precio_tienda"
        android:layout_marginTop="47dp"
        android:id="@+id/servicio_tienda" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/servicio_tienda"
        android:layout_alignStart="@+id/servicio_tienda"
        android:id="@+id/ratingBar" />
</RelativeLayout>
