<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_tienda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hola.shoppingapp.EditTienda"
    tools:showIn="@layout/activity_edit_tienda">

    <TextView
        android:text="Service:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_edit"
        android:layout_alignLeft="@+id/name_label"
        android:layout_alignStart="@+id/name_label"
        android:layout_marginTop="35dp"
        android:id="@+id/service_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/name_edit"
        android:layout_alignRight="@+id/name_edit"
        android:layout_alignEnd="@+id/name_edit"
        android:layout_marginTop="20dp"
        android:id="@+id/service_edit"
        android:hint="Service" />

    <TextView
        android:text="Prize:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_edit"
        android:layout_alignLeft="@+id/service_label"
        android:layout_alignStart="@+id/service_label"
        android:layout_marginTop="37dp"
        android:id="@+id/precio_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/service_edit"
        android:layout_alignLeft="@+id/service_edit"
        android:layout_alignStart="@+id/service_edit"
        android:layout_marginTop="22dp"
        android:id="@+id/precio_edit"
        android:hint="Prize" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/precio_edit"
        android:layout_alignLeft="@+id/precio_edit"
        android:layout_alignStart="@+id/precio_edit"
        android:layout_marginTop="18dp"
        android:id="@+id/telefono_edit"
        android:hint="Tel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/telefono_edit"
        android:layout_alignRight="@+id/telefono_edit"
        android:layout_alignEnd="@+id/telefono_edit"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="27dp"
        android:id="@+id/web_edit"
        android:hint="Webpage" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/web_edit"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/name_edit"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_label"
        android:layout_alignBaseline="@+id/name_edit"
        android:layout_alignBottom="@+id/name_edit"
        android:layout_alignRight="@+id/save_button"
        android:layout_alignEnd="@+id/save_button"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:text="Telefono:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefono_label"
        android:layout_alignBaseline="@+id/telefono_edit"
        android:layout_alignBottom="@+id/telefono_edit"
        android:layout_alignLeft="@+id/precio_label"
        android:layout_alignStart="@+id/precio_label" />

    <TextView
        android:text="web:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_label"
        android:layout_alignBaseline="@+id/web_edit"
        android:layout_alignBottom="@+id/web_edit"
        android:layout_alignLeft="@+id/telefono_label"
        android:layout_alignStart="@+id/telefono_label" />
</RelativeLayout>
