<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tienda_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tienda_precio"
        android:layout_alignBaseline="@+id/tienda_servicio"
        android:layout_alignBottom="@+id/tienda_servicio"
        android:layout_toLeftOf="@+id/tienda_rating" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tienda_servicio"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/tienda_rating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="108dp"
        android:layout_marginEnd="108dp" />

    <RatingBar
        android:layout_height="wrap_content"
        android:id="@+id/tienda_rating"
        android:layout_width="wrap_content"
        style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
        android:layout_alignBottom="@+id/tienda_name"
        android:layout_toRightOf="@+id/tienda_name"
        android:layout_toEndOf="@+id/tienda_name"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />
</RelativeLayout>